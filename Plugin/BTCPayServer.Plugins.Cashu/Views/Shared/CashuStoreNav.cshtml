@{
    var storeId = (string?)ViewContext.RouteData.Values["storeId"] ?? ViewData["StoreId"] as string;
    if (string.IsNullOrEmpty(storeId))
    {
        return;
    }

    var currentPath = Context.Request.Path.Value ?? string.Empty;
    var cashuBase = $"/stores/{storeId}/cashu";
    var isActive = currentPath.StartsWith(cashuBase, StringComparison.OrdinalIgnoreCase);
}
<li class="nav-item">
    <a class="nav-link @(isActive ? "active" : string.Empty)"
       asp-controller="Cashu"
       asp-action="Wallet"
       asp-route-storeId="@storeId">
        Cashu
    </a>
</li>
@using BTCPayServer.Abstractions.Contracts
@using BTCPayServer.Data
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject SignInManager<ApplicationUser> SignInManager;
@inject IScopeProvider ScopeProvider
@inject CashuStatusProvider CashuStatusProvider
@{
    var storeId = ScopeProvider.GetCurrentStoreId();
}
@if (SignInManager.IsSignedIn(User) && !string.IsNullOrEmpty(storeId))
{
    var isEnabled = await CashuStatusProvider.CashuEnabled(storeId);
    var isActive = Context.Request.Path.Value?.Contains("/cashu") == true;
    
    <li class="nav-item">
        <a class="nav-link @(isActive ? "active" : "")"
           asp-route-storeId="@storeId"
           asp-action="StoreConfig"
           asp-controller="Cashu">
            <span class="me-2 btcpay-status btcpay-status--@(isEnabled ? "enabled" : "pending")"></span>
            <span>Cashu</span>
        </a>
    </li>
    @if (isActive)
    {
        <li class="nav-item nav-item-sub">
            <a class="nav-link"
               asp-route-storeId="@storeId"
               asp-action="CashuWallet"
               asp-controller="Cashu">
                <span class="me-2">Wallet</span>
            </a>
        </li>
        
    }
}